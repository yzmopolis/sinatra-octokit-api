<p>OMG</p>

<% if @current_user %>

  <h1>Welcome, <%= @current_user.name %></h1>
  <h4>Login: <%= @current_user.login %></h4>
  <h4>From: <%= @current_user.location %></h4>
  <h4>Repos:</h4>

  <ul>
      <% @repositories.each do |repo| %>
        <tr>
          <td>
            <li id="<%= repo[:id] %>"><%= repo[:name] %> </li>
        </tr>
      <% end %>
  </ul>

<% else %>
  <h1>Welcome, please login.</h1>
<% end %>
